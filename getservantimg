#!/usr/bin/bash

[ -z "$1" ] && echo "Usage: getservantimg <name> <name> et cetera" && exit 0

. $HOME/.local/bin/scripts4fgo/s4go_global

for servant_name in "$@"; do
	{
	id=$( getservantinfo id "$servant_name" )
	images=$( jq -r -M '.[] | "\(.id) \(.extraAssets)"' "$ram_servants" | grep "^$id " | tr -d "\"{}" | sed 's/,/\n/g; s/.https/https/g' | grep -o 'https.*' )
	
	out_dir=$data_dir/$id
	[ ! -s "$out_dir" ] && mkdir "$out_dir"

	for image in $images; do
		wget -q -nc -P "$out_dir" "$image" &
	done
	} &
done
